#!/bin/bash

tmpf=`tempfile`
tmp=${tmpf}.jpg

curl -s "$1" > $tmp
/var/www/tsundere.me/bin/facedetect -q $tmp 2>/dev/null
status=$?
if [ $status -eq 2 ]; then
    echo "no faces"
    rm $tmp
    exit
fi
if [ $status -eq 1 ]; then
    echo "bad image"
    rm $tmp
    exit
fi
/var/www/tsundere.me/bin/tsundere $tmp $tmp
/var/www/tsundere.me/bin/mediacrush $tmp
rm $tmp
