#!/bin/bash

tmp=`tempfile`

curl -s "$1" > $tmp
/var/www/tsundere.me/bin/facedetect -q $tmp 2>/dev/null
status=$?
if [ $status -ne 0 ]; then
    echo "no faces"
    rm $tmp
    exit
fi
/var/www/tsundere.me/bin/tsundere $tmp $tmp
mv $tmp /var/www/tsundere.me/static/$(basename $tmp).jpg
echo "/static/$(basename $tmp).jpg"
